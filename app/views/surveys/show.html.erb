<h1><%= @survey.name %></h1>



<% if @survey.questions.any? %>
  <h4> Here's the questions for this survey: </h4>
  <% @survey.questions.each do | question | %>
   <ol>
      <li>
        <%= link_to question.question, survey_question_path(@survey, question) %>
      </li>
      Select An Answer: 
      <br>
      <%= radio_button('post', 'question.answer','question.a' ) %> <%= question.a %>
      <br>
      <%= radio_button_tag 'question.b', question.b, @answer == question.b %> <%= question.b %>
      <br>
      <%= radio_button_tag 'question.c', question.c, @answer == question.c %> <%= question.c %>
      <br>
      <br>
   </ol>
  <% end %>
<% end %>


<p><%= link_to "Edit", edit_survey_path(@survey) %> </p>
<p><%= link_to "Delete", survey_path(@survey), :data => {:confirm => "You sure?", :method => "delete"} %></p>

<p> <%= link_to "Return to Surveys", surveys_path %></p> 
